<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/home_bg"    tools:context=".HomeActivity">    <Button        android:id="@+id/btn_Home_Reg"        android:layout_width="300dp"        android:layout_height="80dp"        android:layout_marginBottom="48dp"        android:background="@drawable/get_started"        android:onClick="home_reg"        android:textSize="18sp"        app:layout_constraintBottom_toTopOf="@+id/btn_Home_Login"        app:layout_constraintEnd_toEndOf="@+id/btn_Home_Login"        app:layout_constraintStart_toStartOf="@+id/btn_Home_Login"        app:layout_constraintTop_toBottomOf="@+id/textView_Msg" />    <Button        android:id="@+id/btn_Home_Login"        android:layout_width="200dp"        android:layout_height="40dp"        android:layout_marginStart="70dp"        android:layout_marginEnd="45dp"        android:layout_marginBottom="234dp"        android:background="@drawable/home_login"        android:onClick="home_login"        android:textSize="18sp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/btn_Home_Reg" />    <TextView        android:id="@+id/textView_Msg"        android:layout_width="300dp"        android:layout_height="100dp"        android:layout_marginTop="100dp"        android:layout_marginBottom="50dp"        android:background="@drawable/home_welcome"        app:layout_constraintBottom_toTopOf="@+id/btn_Home_Reg"        app:layout_constraintEnd_toEndOf="@+id/btn_Home_Reg"        app:layout_constraintHorizontal_bias="0.0"        app:layout_constraintStart_toStartOf="@+id/btn_Home_Reg"        app:layout_constraintTop_toTopOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>