<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_bg"
    tools:context=".HelpActivity">

    <EditText
        android:id="@+id/et_help_query"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/et_help_query"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_help_submit"
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/btn_submit_bg"
        android:onClick="submit_query"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_help_query" />

    <Button
        android:id="@+id/btn_help_facebook"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/facebook_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_help_gmail"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/gmail_logo"
        app:layout_constraintEnd_toStartOf="@+id/btn_help_instagram"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_help_facebook"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_help_instagram"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="88dp"
        android:background="@drawable/instagram_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
